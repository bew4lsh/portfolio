---
import type { PillSize } from '../types/content';

interface Props {
	size?: PillSize;
	class?: string;
}

const { size = 'medium', class: className = '' } = Astro.props;
---

<div class={`pill ${size} ${className}`}><slot /></div>

<style>
	.pill {
		display: flex;
		gap: 0.5rem;
		color: var(--accent-text-over);
		border: 1px solid var(--accent-regular);
		background-color: var(--accent-regular);
		border-radius: 999rem;
		line-height: 1.35;
		/* Allow pills to wrap on mobile */
		white-space: nowrap;
	}
	
	/* Mobile: Allow pill text to wrap if needed */
	@media (max-width: 50em) {
		.pill {
			white-space: normal;
			word-wrap: break-word;
			overflow-wrap: break-word;
		}
	}

	.pill.medium {
		padding: 0.5rem 1rem;
		font-size: var(--text-md);
	}

	.pill.small {
		padding: 0.25rem 0.75rem;
		font-size: var(--text-sm);
	}
</style>
