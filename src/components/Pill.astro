---
import type { PillSize } from '../types/content';

interface Props {
	size?: PillSize;
	class?: string;
}

const { size = 'medium', class: className = '' } = Astro.props;
---

<div class={`pill ${size} ${className}`}><slot /></div>

<style>
	.pill {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--accent-text-over);
		border: 1px solid var(--accent-regular);
		background-color: var(--accent-regular);
		border-radius: 999rem;
		line-height: 1.35;
		white-space: nowrap;
		/* Prevent pills from changing shape */
		flex-shrink: 0;
	}

	.pill.medium {
		padding: 0.5rem 1rem;
		font-size: var(--text-md);
	}

	.pill.small {
		padding: 0.25rem 0.75rem;
		font-size: var(--text-sm);
	}
</style>
