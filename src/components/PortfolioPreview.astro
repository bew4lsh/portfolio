---
import type { CollectionEntry } from 'astro:content';
import Pill from './Pill.astro';

interface Props {
	project: CollectionEntry<'work'>;
}

const { data, id, slug } = Astro.props.project;

// Ensure required fields exist with fallbacks
const title = data.title || 'Untitled Project';
const description = data.description || 'No description available';
const img = data.img || '/assets/placeholder.jpg';
const imgAlt = data.img_alt || `Screenshot of ${title}`;
const tools = data.tools || [];
const featured = data.featured || false;
---

<a class="card" href={`/work/${id}`}>
	<div class="content">
		<span class="title">{title}</span>
		<p class="description">{description}</p>
		{tools.length > 0 && (
			<div class="tools">
				{tools.slice(0, 3).map((tool) => (
					<Pill size="small">{tool}</Pill>
				))}
				{tools.length > 3 && (
					<span class="more">+{tools.length - 3} more</span>
				)}
			</div>
		)}
		{featured && <span class="featured-badge">Featured</span>}
	</div>
	<img src={img} alt={imgAlt} loading="lazy" decoding="async" />
</a>

<style>
	.card {
		display: flex;
		flex-direction: column;
		height: 100%;
		min-height: 20rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		transition: box-shadow var(--theme-transition);
		position: relative;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.content {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		padding: 1.5rem;
		background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
		color: white;
		z-index: 2;
	}

	.title {
		font-size: var(--text-xl);
		font-weight: 600;
		color: var(--gray-0);
		margin-bottom: 0.5rem;
		display: block;
	}

	.description {
		font-size: var(--text-sm);
		color: var(--gray-200);
		margin-bottom: 1rem;
		line-height: 1.4;
		overflow: hidden;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
	}

	.tools {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		align-items: center;
		margin-bottom: 0.5rem;
	}

	.more {
		font-size: var(--text-xs);
		color: var(--gray-300);
		font-style: italic;
	}

	.featured-badge {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: var(--accent-regular);
		color: var(--accent-text-over);
		padding: 0.25rem 0.75rem;
		border-radius: 9999px;
		font-size: var(--text-xs);
		font-weight: 600;
		z-index: 3;
	}

	img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
	}

	@media (min-width: 50em) {
		.card {
			min-height: 24rem;
			border-radius: 1.5rem;
		}

		.content {
			padding: 2rem;
		}

		.title {
			font-size: var(--text-2xl);
		}

		.description {
			font-size: var(--text-base);
			-webkit-line-clamp: 3;
		}
	}
</style>
